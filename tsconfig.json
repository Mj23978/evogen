{
  "compilerOptions": {
    "lib": [
      "esnext",
    ],
    "module": "esnext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "inlineSources": false,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "types": [
      "@types/node"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "**/*.test.ts",
  ]
}